<div class="depot-form">

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <fieldset>
  <legend>Entre com detalhes do usuário</legend>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :size => 40 %>
  </div>
  
  <div>
    <%= f.label :user_password, 'Password' %>
    <%= f.password_field :password, :size => 40 %>
  </div>

  <div>
    <%= f.label :user_password_confirmation, 'Confirme' %>
    <%= f.password_field :password_confirmation, :size => 40 %>
  </div>

  <div>
    <%= f.submit 'Adicionar Usuário', :class => "submit" %>
  </div>

  </fieldset>
<% end %>

</div>